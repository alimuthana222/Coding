    -- ═══════════════════════════════════════════════════════════════════
    -- UPDATED PROFILES TABLE
    -- ═══════════════════════════════════════════════════════════════════

    ALTER TABLE public.profiles ADD COLUMN IF NOT EXISTS wallet_balance DECIMAL(12,2) DEFAULT 0.00;
    ALTER TABLE public.profiles ADD COLUMN IF NOT EXISTS time_bank_hours DECIMAL(10,2) DEFAULT 2.00; -- ساعتين مجانية لكل حساب جديد
    ALTER TABLE public.profiles ADD COLUMN IF NOT EXISTS total_earnings DECIMAL(12,2) DEFAULT 0.00;
    ALTER TABLE public.profiles ADD COLUMN IF NOT EXISTS total_services_provided INT DEFAULT 0;
    ALTER TABLE public.profiles ADD COLUMN IF NOT EXISTS total_services_received INT DEFAULT 0;
    ALTER TABLE public.profiles ADD COLUMN IF NOT EXISTS provider_rating DECIMAL(2,1) DEFAULT 0.0;
    ALTER TABLE public.profiles ADD COLUMN IF NOT EXISTS total_reviews INT DEFAULT 0;

    -- ═══════════════════════════════════════════════════════════════════
    -- WALLET TRANSACTIONS
    -- ═══════════════════════════════════════════════════════════════════

    DROP TYPE IF EXISTS wallet_transaction_type CASCADE;
    CREATE TYPE wallet_transaction_type AS ENUM (
      'deposit',           -- إيداع
      'withdrawal',        -- سحب
      'service_payment',   -- دفع مقابل خدمة
      'service_earning',   -- ربح من خدمة
      'buy_hours',         -- شراء ساعات
      'refund'             -- استرداد
    );

    DROP TYPE IF EXISTS transaction_status CASCADE;
    CREATE TYPE transaction_status AS ENUM (
      'pending',
      'completed',
      'rejected',
      'cancelled'
    );

    DROP TYPE IF EXISTS payment_method CASCADE;
    CREATE TYPE payment_method AS ENUM (
      'zain_cash',
      'qi_card'
    );

    DROP TABLE IF EXISTS public.wallet_transactions CASCADE;
    CREATE TABLE public.wallet_transactions (
      id UUID DEFAULT uuid_generate_v4() PRIMARY KEY,
      user_id UUID REFERENCES public.profiles(id) ON DELETE CASCADE NOT NULL,
      type wallet_transaction_type NOT NULL,
      amount DECIMAL(12,2) NOT NULL,
      balance_before DECIMAL(12,2) NOT NULL,
      balance_after DECIMAL(12,2) NOT NULL,
      status transaction_status DEFAULT 'pending',

      -- For deposit
      payment_method payment_method,
      payment_phone TEXT,
      payment_reference TEXT,
      deposit_proof_url TEXT,

      -- For withdrawal
      withdrawal_phone TEXT,
      withdrawal_account TEXT,

      -- For service transactions
      related_service_id UUID,
      related_booking_id UUID,
      related_user_id UUID REFERENCES public.profiles(id),

      -- For buying hours
      hours_purchased DECIMAL(5,2),

      -- Admin
      admin_note TEXT,
      processed_by UUID,
      processed_at TIMESTAMPTZ,

      description_ar TEXT,

      created_at TIMESTAMPTZ DEFAULT NOW(),
      updated_at TIMESTAMPTZ DEFAULT NOW()
    );

    -- ═══════════════════════════════════════════════════════════════════
    -- TIME BANK TRANSACTIONS
    -- ═══════════════════════════════════════════════════════════════════

    DROP TYPE IF EXISTS time_transaction_type CASCADE;
    CREATE TYPE time_transaction_type AS ENUM (
      'initial',           -- رصيد أولي (2 ساعة)
      'purchased',         -- شراء من المحفظة
      'earned',            -- ربح من تقديم خدمة
      'spent',             -- صرف للحصول على خدمة
      'refund'             -- استرداد
    );

    DROP TABLE IF EXISTS public.time_bank_transactions CASCADE;
    CREATE TABLE public.time_bank_transactions (
      id UUID DEFAULT uuid_generate_v4() PRIMARY KEY,
      user_id UUID REFERENCES public.profiles(id) ON DELETE CASCADE NOT NULL,
      type time_transaction_type NOT NULL,
      hours DECIMAL(5,2) NOT NULL,
      balance_before DECIMAL(10,2) NOT NULL,
      balance_after DECIMAL(10,2) NOT NULL,

      -- For purchased
      amount_paid DECIMAL(12,2),

      -- For service transactions
      related_service_id UUID,
      related_booking_id UUID,
      related_user_id UUID REFERENCES public.profiles(id),

      description_ar TEXT,

      created_at TIMESTAMPTZ DEFAULT NOW()
    );

    -- ═══════════════════════════════════════════════════════════════════
    -- SERVICES/SKILLS TABLE (Marketplace)
    -- ═══════════════════════════════════════════════════════════════════

    DROP TYPE IF EXISTS service_type CASCADE;
    CREATE TYPE service_type AS ENUM (
      'offering',    -- أعرض خدمة (أقدر أساعدك)
      'requesting'   -- أطلب خدمة (أحتاج مساعدة)
    );

    DROP TYPE IF EXISTS pricing_type CASCADE;
    CREATE TYPE pricing_type AS ENUM (
      'hours',       -- بالساعات (بنك الساعات)
      'money'        -- بالمال (من المحفظة)
    );

    DROP TYPE IF EXISTS service_status CASCADE;
    CREATE TYPE service_status AS ENUM (
      'active',
      'paused',
      'completed',
      'deleted'
    );

    DROP TABLE IF EXISTS public.services CASCADE;
    CREATE TABLE public.services (
      id UUID DEFAULT uuid_generate_v4() PRIMARY KEY,
      user_id UUID REFERENCES public.profiles(id) ON DELETE CASCADE NOT NULL,
      category_id UUID REFERENCES public.skill_categories(id),

      -- Basic Info
      service_type service_type NOT NULL,
      title TEXT NOT NULL,
      description TEXT NOT NULL,

      -- Pricing
      pricing_type pricing_type NOT NULL,
      price_hours DECIMAL(5,2),        -- السعر بالساعات
      price_money DECIMAL(12,2),       -- السعر بالدينار
      estimated_duration INT,          -- المدة المتوقعة بالدقائق

      -- Media
      images TEXT[] DEFAULT '{}',

      -- Status
      status service_status DEFAULT 'active',

      -- Stats
      views INT DEFAULT 0,
      total_bookings INT DEFAULT 0,
      completed_bookings INT DEFAULT 0,
      rating DECIMAL(2,1) DEFAULT 0.0,
      total_reviews INT DEFAULT 0,

      -- Search
      search_text TEXT,

      created_at TIMESTAMPTZ DEFAULT NOW(),
      updated_at TIMESTAMPTZ DEFAULT NOW()
    );

    -- ═══════════════════════════════════════════════════════════════════
    -- SERVICE BOOKINGS
    -- ═══════════════════════════════════════════════════════════════════

    DROP TYPE IF EXISTS booking_status CASCADE;
    CREATE TYPE booking_status AS ENUM (
      'pending',           -- في انتظار القبول
      'accepted',          -- تم القبول
      'in_progress',       -- قيد التنفيذ
      'completed',         -- مكتمل
      'cancelled',         -- ملغي
      'rejected',          -- مرفوض
      'disputed'           -- نزاع
    );

    DROP TABLE IF EXISTS public.service_bookings CASCADE;
    CREATE TABLE public.service_bookings (
      id UUID DEFAULT uuid_generate_v4() PRIMARY KEY,
      service_id UUID REFERENCES public.services(id) ON DELETE CASCADE NOT NULL,

      -- Users
      client_id UUID REFERENCES public.profiles(id) ON DELETE CASCADE NOT NULL,
      provider_id UUID REFERENCES public.profiles(id) ON DELETE CASCADE NOT NULL,

      -- Pricing (snapshot at booking time)
      pricing_type pricing_type NOT NULL,
      price_hours DECIMAL(5,2),
      price_money DECIMAL(12,2),

      -- Status
      status booking_status DEFAULT 'pending',

      -- Messages/Notes
      client_message TEXT,
      provider_response TEXT,

      -- Dates
      accepted_at TIMESTAMPTZ,
      started_at TIMESTAMPTZ,
      completed_at TIMESTAMPTZ,
      cancelled_at TIMESTAMPTZ,
      cancelled_by UUID,
      cancellation_reason TEXT,

      -- Review
      client_rating INT CHECK (client_rating >= 1 AND client_rating <= 5),
      client_review TEXT,
      client_reviewed_at TIMESTAMPTZ,

      provider_rating INT CHECK (provider_rating >= 1 AND provider_rating <= 5),
      provider_review TEXT,
      provider_reviewed_at TIMESTAMPTZ,

      created_at TIMESTAMPTZ DEFAULT NOW(),
      updated_at TIMESTAMPTZ DEFAULT NOW()
    );

    -- ═══════════════════════════════════════════════════════════════════
    -- INDEXES
    -- ═══════════════════════════════════════════════════════════════════

    CREATE INDEX idx_services_user ON public.services(user_id);
    CREATE INDEX idx_services_category ON public.services(category_id);
    CREATE INDEX idx_services_type ON public.services(service_type);
    CREATE INDEX idx_services_pricing ON public.services(pricing_type);
    CREATE INDEX idx_services_status ON public.services(status);
    CREATE INDEX idx_services_search ON public.services USING GIN(to_tsvector('arabic', search_text));

    CREATE INDEX idx_bookings_service ON public.service_bookings(service_id);
    CREATE INDEX idx_bookings_client ON public.service_bookings(client_id);
    CREATE INDEX idx_bookings_provider ON public.service_bookings(provider_id);
    CREATE INDEX idx_bookings_status ON public.service_bookings(status);

    CREATE INDEX idx_wallet_trans_user ON public.wallet_transactions(user_id);
    CREATE INDEX idx_wallet_trans_status ON public.wallet_transactions(status);

    CREATE INDEX idx_time_trans_user ON public.time_bank_transactions(user_id);

    -- ═══════════════════════════════════════════════════════════════════
    -- RLS POLICIES
    -- ═══════════════════════════════════════════════════════════════════

    ALTER TABLE public.services ENABLE ROW LEVEL SECURITY;
    ALTER TABLE public.service_bookings ENABLE ROW LEVEL SECURITY;
    ALTER TABLE public.wallet_transactions ENABLE ROW LEVEL SECURITY;
    ALTER TABLE public.time_bank_transactions ENABLE ROW LEVEL SECURITY;

    -- Services
    CREATE POLICY "Active services viewable by all" ON public.services
      FOR SELECT USING (status = 'active');
    CREATE POLICY "Users can manage own services" ON public.services
      FOR ALL USING (auth.uid() = user_id);

    -- Bookings
    CREATE POLICY "Users can view own bookings" ON public.service_bookings
      FOR SELECT USING (auth.uid() = client_id OR auth.uid() = provider_id);
    CREATE POLICY "Users can create bookings" ON public.service_bookings
      FOR INSERT WITH CHECK (auth.uid() = client_id);
    CREATE POLICY "Participants can update bookings" ON public.service_bookings
      FOR UPDATE USING (auth.uid() = client_id OR auth.uid() = provider_id);

    -- Wallet transactions
    CREATE POLICY "Users can view own wallet transactions" ON public.wallet_transactions
      FOR SELECT USING (auth.uid() = user_id);
    CREATE POLICY "Users can create wallet transactions" ON public.wallet_transactions
      FOR INSERT WITH CHECK (auth.uid() = user_id);

    -- Time bank transactions
    CREATE POLICY "Users can view own time transactions" ON public.time_bank_transactions
      FOR SELECT USING (auth.uid() = user_id);

    -- ═══════════════════════════════════════════════════════════════════
    -- FUNCTIONS & TRIGGERS
    -- ═══════════════════════════════════════════════════════════════════

    -- Auto update search_text
    CREATE OR REPLACE FUNCTION update_service_search_text()
    RETURNS TRIGGER AS $$
    BEGIN
      NEW.search_text := NEW.title || ' ' || NEW.description;
      RETURN NEW;
    END;
    $$ LANGUAGE plpgsql;

    CREATE TRIGGER service_search_text_trigger
      BEFORE INSERT OR UPDATE ON public.services
      FOR EACH ROW EXECUTE FUNCTION update_service_search_text();

    -- Give 2 hours to new users
    CREATE OR REPLACE FUNCTION give_initial_hours()
    RETURNS TRIGGER AS $$
    BEGIN
      -- Insert initial time bank transaction
      INSERT INTO public.time_bank_transactions (
        user_id, type, hours, balance_before, balance_after, description_ar
      ) VALUES (
        NEW.id, 'initial', 2, 0, 2, 'رصيد أولي - ساعتين مجانية'
      );
      RETURN NEW;
    END;
    $$ LANGUAGE plpgsql SECURITY DEFINER;

    CREATE TRIGGER on_new_user_give_hours
      AFTER INSERT ON public.profiles
      FOR EACH ROW EXECUTE FUNCTION give_initial_hours();

    -- Update service rating after review
    CREATE OR REPLACE FUNCTION update_service_rating()
    RETURNS TRIGGER AS $$
    BEGIN
      UPDATE public.services SET
        rating = (
          SELECT ROUND(AVG(client_rating)::numeric, 1)
          FROM public.service_bookings
          WHERE service_id = NEW.service_id AND client_rating IS NOT NULL
        ),
        total_reviews = (
          SELECT COUNT(*)
          FROM public.service_bookings
          WHERE service_id = NEW.service_id AND client_rating IS NOT NULL
        )
      WHERE id = NEW.service_id;

      -- Update provider rating
      UPDATE public.profiles SET
        provider_rating = (
          SELECT ROUND(AVG(client_rating)::numeric, 1)
          FROM public.service_bookings b
          JOIN public.services s ON b.service_id = s.id
          WHERE s.user_id = NEW.provider_id AND b.client_rating IS NOT NULL
        ),
        total_reviews = (
          SELECT COUNT(*)
          FROM public.service_bookings b
          JOIN public.services s ON b.service_id = s.id
          WHERE s.user_id = NEW.provider_id AND b.client_rating IS NOT NULL
        )
      WHERE id = NEW.provider_id;

      RETURN NEW;
    END;
    $$ LANGUAGE plpgsql SECURITY DEFINER;

    CREATE TRIGGER on_booking_review
      AFTER UPDATE OF client_rating ON public.service_bookings
      FOR EACH ROW EXECUTE FUNCTION update_service_rating();